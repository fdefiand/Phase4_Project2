<br><br><br>

<p id="notice"><%= notice %></p>

<% if @families.empty? %>
  <h3>There are no families in the system at this time</h3>
<% else %>

  <h2>Families</h2>

  <table>
    <thead>
      <tr>
        
        <th>Family Name</th>
        <th>Parent First Name</th>
        <th>User ID</th>
        <th colspan = "3"></th>
        
      </tr>
    </thead>
    
    <tbody>
      <% @families.each do |family| %>
      <tr>
        <td> <%= link_to family.family_name, family %></td>
        <td> <%= link_to family.parent_first_name, family %></td>
        <td> <%= link_to family.user_id, family %></td>
        
        <td> <%= link_to 'Edit', edit_family_path(family) %></td>
        
      </tr>
      <% end %>
    </tbody>
  </table>


  <% end %>

<br>
<%= link_to 'New Family', new_family_path %>