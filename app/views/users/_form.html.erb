<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username, id: 'username' %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.text_field :password, id: 'password' %>
  </div>
  
  <div class="field">
    <%= form.label :role %>
    <%= form.select :role, options_for_select([['admin', 'admin'], ['instructor', 'instructor'], ['parent', 'parent']]), {}, id: 'role' %>
  </div>
  
  <div class="field">
    <%= form.label :phone %>
    <%= form.text_field :phone, id: 'phone' %>
  </div>
  
  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: 'email' %>
  </div>
  
  <div class="checkbox">
    <label><%= form.check_box :active %> Is this user active?</label>
  </div>
    


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
